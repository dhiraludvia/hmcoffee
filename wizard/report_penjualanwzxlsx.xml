<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- hmcoffee.reportpenjualanwz form view -->
    <record id="hmcoffee_reportpenjualanwzxlsx_view_form" model="ir.ui.view">
        <field name="name">hmcoffee.reportpenjualanwzxlsx.view.form</field>
        <field name="model">hmcoffee.reportpenjualanwzxlsx</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="dari_tgl"/>
                        <field name="ke_tgl"/>                        
                    </group>
                    <footer>
                        <button name="action_penjualan_report"
                            string="Print Report"
                            type="object"
                            class="btn btn-primary"
                        />
                        <button string="Cancel"
                            special="cancel"
                            class="btn btn-warning"
                        />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- hmcoffee.penjualan action window -->
    <record id="hmcoffee_reportpenjualanwzxlsx_action" model="ir.actions.act_window">
        <field name="name">Report Penjualan Wizard Xlsx</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hmcoffee.reportpenjualanwzxlsx</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="hmcoffee_reportpenjualanwzxlsx_view_form"/>
        <field name="target">new</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="hmcoffee_laporan_penjualan_wizard_xlsx_menu_act" 
        name="Laporan Penjualan Wizard Xlsx" 
        parent="laporan_menu_categ" 
        action="hmcoffee_reportpenjualanwzxlsx_action" 
        sequence="15"/>

</odoo>

